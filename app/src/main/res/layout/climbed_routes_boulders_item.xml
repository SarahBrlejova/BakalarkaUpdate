<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:id="@+id/tvClimbName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Názov cesty/bouldra" />

    <TextView
        android:id="@+id/tvClimbedRoutesBouldersITemDifficulty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Obtiažnosť"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvClimbedRoutesBouldersITemTimes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Počet pokusov" />

</LinearLayout>