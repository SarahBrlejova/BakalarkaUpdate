<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/resetPasswordLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResetPasswordActivity">

    <ImageView
        android:id="@+id/IVbackgroundImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/pozadie"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        android:contentDescription="pozadie" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="48dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="24dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/round_corner"            android:orientation="vertical"
            android:padding="24dp">

            <EditText
                android:id="@+id/ETResetMail"
                android:layout_width="227dp"
                android:layout_height="48dp"
                android:hint="Email"
                android:textColorLink="#3D2060"
                android:layout_marginBottom="16dp" />

            <Button
                android:id="@+id/BReset"
                android:layout_width="227dp"
                android:layout_height="wrap_content"
                android:text="Reset hesla"
                android:backgroundTint="#3D2060"
                android:layout_marginBottom="12dp" />

            <Button
                android:id="@+id/BResetBack"
                android:layout_width="227dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#3D2060"
                android:text="Späť" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>
